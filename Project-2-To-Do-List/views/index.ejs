<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
</head>
<body>
    <div class="container">
    <h1>To-Do List</h1>
    <form action="/addTask" method="post">
        <input type="text" placeholder="Task Title" name="title" required />
        <input type="text" placeholder="Description" name="description" required />
        <input type="time" placeholder="Work Time" name="workTime" required />
        <input type="date" placeholder="Work Date" name="workDate" required />
        <input type="number" placeholder="Work Hours" name="workHours" required />
        <input type="text" placeholder="Priority" name="priority" required />
        <input type="text" placeholder="Status" name="status" required />
        <button type="submit">Add Task</button>
    </form>


    <table border="1" style="width: 100%; margin-top: 20px;">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Work Time</th>
            <th>Work Date</th>
            <th>Work Hours</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        <% tasks.map((task) => { %>
        <tr style="text-align: center;">
            <td><%= task.id %></td>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.workTime %></td>
            <td><%= task.workDate %></td>
            <td><%= task.workHours %></td>
            <td><%= task.priority %></td>
            <td><%= task.status %></td>
            <td>
                <a class="a1" href="/editTask/<%= task.id %>">Edit</a> |
                <a class="b1" href="/deleteTask?id=<%= task.id %>">Delete</a>
            </td>
        </tr>
        <% }) %>
    </table>
</div>
</body>
</html>


<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        color: #343a40;
        background: #E55D87;  
        background: -webkit-linear-gradient(to right, #5FC3E4, #E55D87);  
        background: linear-gradient(to right, #5FC3E4, #E55D87);

    }
    .container {
        width: 90%;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background: #ffffff;
